<div class="mt-5">
  <%= form_with(model: @comment, url: create_comment_posts_path, method: "post") do |form| %>
    <% if @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% @comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="">
      <%= form.hidden_field :post_id, value: @post.id %>
      <div class="card">
        <div class="comment-widgets scrollable">
          <!-- Comment Row -->
          <div class="d-flex flex-row comment-row mt-0">


            <div class="comment-text w-100">

              <div class="d-flex flex-column align-items-start">
                <div class="d-flex">
                  <img class="rounded-circle" src="https://i.imgur.com/RpzrMR2.jpg" width="40">
                  <%= form.text_field :name , class: "form-control ml-1 shadow-none name_area" %>
                </div>
                <%= form.text_area :body , class: "form-control ml-1 shadow-none textarea" %>
              </div>

                <div class="mt-2 text-right">
                  <%= form.submit "Comentar" , class: "btn btn-primary btn-sm shadow-none"%>
                </div>

            </div>
          </div>
        </div>
      </div>
    </div>


  <% end %>

</div>
