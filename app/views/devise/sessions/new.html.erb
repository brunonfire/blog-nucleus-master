<div class="container d-flex flex-column align-items-center mt-5 col-lg-4 col-md-10 col-sm-12 col-xs-12">

<div class="text-center">  <h2>Faça seu login:</h2></div>

  <div class="mt-5  col-lg-9 col-md-10 col-sm-12 col-xs-12">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row d-flex justify-content-center align-items-center">
      <form class=" col-lg-4 col-md-6 col-sm-12 col-xs-12 mb-3">
        <!-- Email input -->
        <div class="form-outline mb-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <label class="form-label" for="form2Example1">Email</label>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>

          <label class="form-label" for="form2Example2">Senha</label>
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
          <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <% if devise_mapping.rememberable? %>
            <div class="form-check">
              <%= f.check_box :remember_me , class:"form-check-input", checked: true%>
              <label class="form-check-label" for="form2Example31">Memorizar senha </label>
            </div>
            <% end %>
          </div>

          <div class="col">
            <!-- Simple link -->
            <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %>
          </div>
        </div>

        <!-- Submit button -->
        <div class="row d-flex justify-content-center align-items-center">
          <%= f.submit "Entrar", class:"btn btn-primary btn-block mb-4"  %>
        </div>

        <!-- Register buttons -->
        <div class="text-center">
          <p>Não tem uma conta? <%= link_to "Cadastre-se", new_registration_path(resource_name) %></p>
        </div>
      </form>
    </div>
    <% end %>
  </div>

</div>


